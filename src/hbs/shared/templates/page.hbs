<?php
    session_start();

	// Constants
    define('TIMEOUT_MINS', 10);

	// Functions
	function redirectToLogin() {
        header('Location: ./api/login.php');
        exit;
    }
    
	// Basic login logic
    if (!isset($_SESSION['user'])) {
        redirectToLogin();
    } else {
		// TIMEOUT_MINS * 60 seconds = Timeout in seconds
		if(time() - $_SESSION['loginTimeStamp'] > (TIMEOUT_MINS * 60)) {
			session_unset();
			session_destroy();
			redirectToLogin();
		}
	}
?>

